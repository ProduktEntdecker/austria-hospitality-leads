# Application
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000
APP_NAME="Austria Hospitality Leads"
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/austria_leads
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Session
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_DURATION=86400000

# AI APIs
ANTHROPIC_API_KEY=your-claude-api-key
OPENAI_API_KEY=your-openai-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key

# AI Model Selection
PRIMARY_AI_MODEL=claude-3-opus-20240229
FALLBACK_AI_MODEL=gpt-4-turbo-preview
BULK_PROCESSING_MODEL=deepseek-chat

# N8N Integration
N8N_HOST=http://localhost:5678
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_URL=http://localhost:3001/api/webhooks/n8n
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# Web Scraping
SCRAPING_PROXY_URL=
SCRAPING_USER_AGENT="Mozilla/5.0 (compatible; AustriaLeadsBot/1.0)"
SCRAPING_RATE_LIMIT=10
SCRAPING_CONCURRENT_REQUESTS=3

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Austria Leads <noreply@austrialeads.at>"

# Lead Enrichment
ENRICHMENT_BATCH_SIZE=10
ENRICHMENT_DELAY_MS=1000
ENRICHMENT_MAX_RETRIES=3

# Security
JWT_SECRET=your-jwt-secret-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_AI_ENRICHMENT=true
ENABLE_AUTO_VALIDATION=true
ENABLE_LEAD_SCORING=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_GDPR_COMPLIANCE=true

# Austrian Market Specific
DEFAULT_LANGUAGE=de
DEFAULT_COUNTRY=AT
DEFAULT_CURRENCY=EUR
VAT_RATE=0.20

# API Rate Limits (per minute)
CLAUDE_RATE_LIMIT=50
OPENAI_RATE_LIMIT=100
PERPLEXITY_RATE_LIMIT=60

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret

# Google APIs (for location/business data)
GOOGLE_MAPS_API_KEY=
GOOGLE_PLACES_API_KEY=

# CRM Integration (optional)
CRM_TYPE=hubspot
CRM_API_KEY=
CRM_API_URL=

# Deployment
DEPLOY_ENV=local
DOCKER_REGISTRY=